@model IEnumerable<EuroSociedades.Models.Concursos>

@{
    ViewBag.Title = "Index";
}

<h2>Concursos</h2>

<p>
    @Html.ActionLink("Criar Concurso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Concurso")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataConcurso)
        </th>
        <th>
            @Html.DisplayName("Chave") 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeConcurso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataConcurso)
        </td>
        <td>
            @if (@item.ChaveFK != null) {
            <span> @Html.DisplayFor(modelItem => item.ChaveSorteada.Numeros) + @Html.DisplayFor(modelItem => item.ChaveSorteada.Estrelas)</span>
            }
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
